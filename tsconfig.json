{
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "build",
    "typeRoots": ["node_modules/@types", "@types/*"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "**/*.ts", "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
